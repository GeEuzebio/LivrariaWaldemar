@model LibraryApp.Models.Book

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Título
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            Gênero
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class = "col-sm-2">
            Autor
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt class = "col-sm-2">
            Registro
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Register)
        </dd>
    </dl>
</div>
<div style="display: flex;">
    <a asp-action="Edit" asp-route-id="@Model?.BookId"><input type="button" value="Edit" class="btn btn-warning" /></a>
    <a asp-action="Index"><input type="button" class="btn btn-dark" value="< Retornar aos Livros" /></a>
</div>
