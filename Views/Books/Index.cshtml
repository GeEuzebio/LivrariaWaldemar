@model IEnumerable<LibraryApp.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h3>Últimos livros cadastrados</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                Título
            </th>
            <th>
                Gênero
            </th>
            <th>
                Autor
            </th>
            <th>
                Registro
            </th>
            <th>
                Status
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Register)
            </td>
            <td>
                @item.Status.GetDescription()
            </td>
        </tr>
}
    </tbody>
</table>
<div class="container mt-5" style="display: flex; flex-direction: row; justify-content:space-between;">
    <a asp-action="Create" style="text-decoration: none; color:#000; text-align:center;">
        <div class="card" style="width: 200px">
            <img src="~/images/register.png" alt="Cadastro" width="128" style="margin: 10px auto"/>
            <p class="card-text">Cadastrar Livro</p>
        </div>
    </a>
    <a asp-action="RegistredBooks" style="text-decoration: none; color:#000; text-align:center;">
        <div class="card" style="width: 200px">
            <img src="~/images/books.png" alt="Livros Cadastrados" width="128" style="margin: 10px auto" />
            <p class="card-text" style="text-align: center;">Livros Cadastrados</p>
        </div>
    </a>
    <div class="card" style="width: 200px">
        <img src="~/images/borrow.png" alt="Empréstimos" width="128" style="margin: 10px auto" />
        <p class="card-text" style="text-align: center;">Livros Emprestados</p>
    </div>
    <div class="card" style="width: 200px">
        <img src="~/images/report.png" alt="Relatórios" width="128" style="margin: 10px auto" />
        <p class="card-text" style="text-align: center;">Relatórios</p>
    </div>
</div>
