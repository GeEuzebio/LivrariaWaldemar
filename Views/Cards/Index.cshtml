@model IEnumerable<LibraryApp.Models.Card>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="container-fluid">
    <div class="card" style="background-color:#000; width: 320px; height: 190px">
        <div class="card-body">
            <div class="card-header" style="color:#fff">
                <h5 class="card-title">Fulano de Tal da Silva</h5>
                <h6 class="card-subtitle">Carteirinha de Identificação</h6>
            </div>
            <div class="container-footer" style="color:#fff">
                <p>Matrícula:</p>
                <p>Turma:</p>
                <p>Email:</p>
                <p>Biblioteca e Multimeios EEMTI Waldemar Falcão</p>
            </div>
        </div>
    </div>
</div>