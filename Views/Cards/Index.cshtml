@model LibraryApp.Models.User

@{
    ViewData["Title"] = "Index";
}

<form asp-action="Search">
    <div class="row">
        <div class="col">
            <label class="control-label">Nome Completo:</label>
            <input name="name" class="form-control">
        </div>
        <div class="col">
            <label>Turma</label>
            <select class="custom-select" name="classroom" style="padding: 2px;">
                <option value="1A">1º Ano A</option>
                <option value="1B">1º Ano B</option>
                <option value="1C">1º Ano C</option>
                <option value="1D">1º Ano D</option>
                <option value="2A">2º Ano A</option>
                <option value="2B">2º Ano B</option>
                <option value="2C">2º Ano C</option>
                <option value="3A">3º Ano A</option>
                <option value="3B">3º Ano B</option>
                <option value="3B">EJA A</option>
                <option value="3B">EJA B</option>
                <option value="3B">EJA C</option>
            </select>
        </div>
        <input type="submit" class="btn btn-info" value="Gerar Carteirinha">
    </div>
</form>

@if (Model != null)
{
    <div class="container-fluid">
        <div class="card" style="background-color:#000; width: 320px; height: 190px">
            <div class="card-body">
                <div class="card-header" style="color:#fff">
                    <h5 class="card-title">@Model!.Name</h5>
                    <h6 class="card-subtitle">Carteirinha de Identificação</h6>
                </div>
                <div class="container-footer" style="color:#fff; font-size:10pt">
                    <p>
                        Matrícula: @Model!.SIGE
                        Turma: @switch (Model.Class)
                        {
                            case "1A":
                                <text>1º Ano A</text>
                                ;
                                break;
                            case "1B":
                                <text>1º Ano A</text>
                                ;
                                break;
                            case "1C":
                                <text>1º Ano A</text>
                                ;
                                break;
                            case "1D":
                                <text>1º Ano A</text>
                                ;
                                break;
                            case "2A":
                                <text>1º Ano A</text>
                                ;
                                break;
                            case "2B":
                                <text>1º Ano A</text>
                                ;
                                break;
                            case "2C":
                                <text>1º Ano A</text>
                                ;
                                break;
                            case "3A":
                                <text>1º Ano A</text>
                                ;
                                break;
                            case "3B":
                                <text>1º Ano A</text>
                                ;
                                break;
                        }
                        Email: @Model.Email
                        Biblioteca e Multimeios EEMTI Waldemar Falcão
                    </p>
                </div>
            </div>
        </div>
    </div>
}