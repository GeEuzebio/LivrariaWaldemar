@model LibraryApp.Models.Scheduling

@{
    int i = ViewBag.Pos;
}

<h3>Deseja remover o Agendamento?</h3>
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Data
        </dt>
        <dd class="col-sm-10">
            @Model.Day!.Value.ToString("dd/MM/yyyy")
        </dd>
        <dt class="col-sm-2">
            Horário
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hours[i])
        </dd>
        <dt class="col-sm-2">
            Turma
        </dt>
        <dd class="col-sm-10">
            @Model.ClassRoom[i]!.GetDescription()
        </dd>
        <dt class="col-sm-2">
            Professor
        </dt>
        <dd class="col-sm-10">
            @Model.Professor[i]!.GetDescription()
        </dd>
    </dl>

    <form asp-action="Delete">
        <input name="day" type="date" value="@Model.Day!.Value.ToString("yyyy-MM-dd")" style="display:none" />
        <input name="pos" type="hidden" value="@i" />
        <input type="submit" value="Remover" class="btn btn-danger" /> |
        <a asp-action="Index"><input type="button" class="btn btn-dark" value="< Retornar aos Agendamentos" /></a>
    </form>
</div>
