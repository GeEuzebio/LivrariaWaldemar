@model LibraryApp.Models.Borrow

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Borrow</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div sytle="display: none">
                <input name="UserId" value="@Model.UserId" />
                <input name="BookId" value="@Model.BookId" />
            </div>
            <div class="form-group">
                <label asp-for="InitialDate" class="control-label"></label>
                <input name="InitialDate" class="form-control" value="@DateTime.Now.Date" readonly/>
                <span asp-validation-for="InitialDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastDate" class="control-label"></label>
                <input name="LastDate" class="form-control" value="@DateTime.Now.AddDays(15).Date" readonly/>
                <span asp-validation-for="LastDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><input type="button" class="btn btn-dark" value="< Back to List" /></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
