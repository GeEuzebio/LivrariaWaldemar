@model LibraryApp.Models.Borrow

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Empréstimo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Data do Empréstimo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InitialDate)
        </dd>
        <dt class = "col-sm-2">
            Data da Devolução
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastDate)
        </dd>
    </dl>
</div>
<div style="display: flex;">
    <a asp-action="Edit" asp-route-id="@Model?.Id"><input type="button" value="Edit" class="btn btn-warning" /></a> 
    <a asp-action="Index"><input type="button" class="btn btn-dark" value="< Voltar aos Emptréstimos" /></a>
</div>
